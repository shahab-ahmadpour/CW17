@{
    ViewData["Title"] = "Login or Register";
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- لینک به فایل CSS بوت استرپ -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv+Vf6T1Lxw0v+zVxY7vM+5gP+1o5v5r5XpFHRt0Jx4s5z5Wy1zC7UnXOdF" crossorigin="anonymous">
</head>
<body style="background-color: #f4f6f9;">

    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="row w-100">
            <div class="col-md-6 mb-4">
                <!-- کارت ورود -->
                <div class="card shadow-lg">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-4">Login</h3>
                        <p class="card-text mb-4">Please log in to your account to continue.</p>
                        <a href="/Account/Login" class="btn btn-primary btn-lg w-100">Login</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <!-- کارت ثبت نام -->
                <div class="card shadow-lg">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-4">Register</h3>
                        <p class="card-text mb-4">Don't have an account? Sign up now!</p>
                        <a href="/Account/Register" class="btn btn-success btn-lg w-100">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- لینک به فایل‌های جاوا اسکریپت بوت استرپ -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0zS3t3p0p/jf1P+JizjH7vdycbz6R2EIl7erTz6x/gq8FEmk" crossorigin="anonymous"></script>
</body>
</html>
